<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="9">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome do personagem"
            android:id="@+id/textName"
            android:textSize="20sp"
            android:layout_row="0"
            android:layout_column="0"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameText"
            android:layout_row="1"
            android:layout_column="0"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Raças"
            android:id="@+id/textRaca"
            android:textSize="20sp"
            android:layout_row="2"
            android:layout_column="0"/>

        <GridLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:columnCount="2">

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/roundedbutton"
                android:src="@drawable/info"
                android:id="@+id/buttonInfoRaca"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerRaca"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:padding="3dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_weight="2" />

        </GridLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Classes"
            android:textSize="20sp"
            android:id="@+id/textClasse"
            android:layout_row="4"
            android:layout_column="0"/>

        <GridLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:columnCount="2">

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/roundedbutton"
                android:src="@drawable/info"
                android:id="@+id/buttonInfoClasse"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerClasse"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:padding="3dp"
                android:layout_row="0"
                android:layout_column="0" />

        </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:rowCount="6"
                android:columnCount="5"
                android:id="@+id/gridAtrs"
                android:layout_row="6"
                android:layout_column="0">

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/roundedbutton"
                    android:src="@drawable/plus"
                    android:id="@+id/buttonPlusAtr1"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_margin="3dp"/>
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="0"
                    android:textSize="25dp"
                    android:id="@+id/valAtr1"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:layout_margin="3dp"/>
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/roundedbutton"
                    android:src="@drawable/minus"
                    android:id="@+id/buttonMinusAtr1"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:layout_margin="3dp"/>
                <TextView
                    android:id="@+id/modAtr1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1"
                    android:textSize="25dp"
                    android:layout_column="3"
                    android:layout_row="0"
                    android:gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FOR"
                    android:textSize="20dp"
                    android:layout_column="4"
                    android:layout_row="0"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="40dp"/>



                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/roundedbutton"
                    android:src="@drawable/plus"
                    android:id="@+id/buttonPlusAtr2"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_margin="3dp"/>
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="0"
                    android:textSize="25dp"
                    android:id="@+id/valAtr2"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:textAlignment="center"
                    android:layout_margin="3dp"
                    android:gravity="center_vertical"/>
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/roundedbutton"
                    android:src="@drawable/minus"
                    android:id="@+id/buttonMinusAtr2"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:layout_margin="3dp"/>
                <TextView
                    android:id="@+id/modAtr2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1"
                    android:textSize="25dp"
                    android:layout_column="3"
                    android:layout_row="1"
                    android:gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DES"
                    android:textSize="20dp"
                    android:layout_column="4"
                    android:layout_row="1"
                    android:layout_margin="3dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="40dp"/>



                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/roundedbutton"
                    android:src="@drawable/plus"
                    android:id="@+id/buttonPlusAtr3"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:layout_margin="3dp"/>
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="0"
                    android:textSize="25dp"
                    android:id="@+id/valAtr3"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:textAlignment="center"
                    android:layout_margin="3dp"
                    android:gravity="center_vertical"/>
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/roundedbutton"
                    android:src="@drawable/minus"
                    android:id="@+id/buttonMinusAtr3"
                    android:layout_column="2"
                    android:layout_row="2"
                    android:layout_margin="3dp"/>
                <TextView
                    android:id="@+id/modAtr3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1"
                    android:textSize="25sp"
                    android:layout_column="3"
                    android:layout_row="2"
                    android:gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CON"
                    android:textSize="20sp"
                    android:layout_column="4"
                    android:layout_row="2"
                    android:layout_margin="3dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="40dp"/>



                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/roundedbutton"
                    android:src="@drawable/plus"
                    android:id="@+id/buttonPlusAtr4"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:layout_margin="3dp"/>
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="0"
                    android:textSize="25dp"
                    android:id="@+id/valAtr4"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:textAlignment="center"
                    android:layout_margin="3dp"
                    android:gravity="center_vertical"/>
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/roundedbutton"
                    android:src="@drawable/minus"
                    android:id="@+id/buttonMinusAtr4"
                    android:layout_column="2"
                    android:layout_row="3"
                    android:layout_margin="3dp"/>
                <TextView
                    android:id="@+id/modAtr4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1"
                    android:textSize="25dp"
                    android:layout_column="3"
                    android:layout_row="3"
                    android:gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INT"
                    android:textSize="20dp"
                    android:layout_column="4"
                    android:layout_row="3"
                    android:layout_margin="3dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="40dp"/>



                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/roundedbutton"
                    android:src="@drawable/plus"
                    android:id="@+id/buttonPlusAtr5"
                    android:layout_column="0"
                    android:layout_row="4"
                    android:layout_margin="3dp"/>
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="0"
                    android:textSize="25dp"
                    android:id="@+id/valAtr5"
                    android:layout_column="1"
                    android:layout_row="4"
                    android:textAlignment="center"
                    android:layout_margin="3dp"
                    android:gravity="center_vertical"/>
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/roundedbutton"
                    android:src="@drawable/minus"
                    android:id="@+id/buttonMinusAtr5"
                    android:layout_column="2"
                    android:layout_row="4"
                    android:layout_margin="3dp"/>
                <TextView
                    android:id="@+id/modAtr5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1"
                    android:textSize="25dp"
                    android:layout_column="3"
                    android:layout_row="4"
                    android:gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SAB"
                    android:textSize="20dp"
                    android:layout_column="4"
                    android:layout_row="4"
                    android:layout_margin="3dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="40dp"/>



                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/roundedbutton"
                    android:src="@drawable/plus"
                    android:id="@+id/buttonPlusAtr6"
                    android:layout_column="0"
                    android:layout_row="5"
                    android:layout_margin="3dp"/>
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="0"
                    android:textSize="25dp"
                    android:id="@+id/valAtr6"
                    android:layout_column="1"
                    android:layout_row="5"
                    android:textAlignment="center"
                    android:layout_margin="3dp"
                    android:gravity="center_vertical"/>
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/roundedbutton"
                    android:src="@drawable/minus"
                    android:id="@+id/buttonMinusAtr6"
                    android:layout_column="2"
                    android:layout_row="5"
                    android:layout_margin="3dp"/>
                <TextView
                    android:id="@+id/modAtr6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1"
                    android:textSize="25dp"
                    android:layout_column="3"
                    android:layout_row="5"
                    android:gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CAR"
                    android:textSize="20dp"
                    android:layout_column="4"
                    android:layout_row="5"
                    android:layout_margin="3dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="40dp"/>

            </GridLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Traços raciais"
            android:id="@+id/buttonTracoRaca"
            android:layout_column="0"
            android:layout_row="7"
            android:clickable="false"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Criar"
            android:id="@+id/buttonCreate"
            android:layout_column="0"
            android:layout_row="8"/>

    </GridLayout>

</ScrollView>

</RelativeLayout>