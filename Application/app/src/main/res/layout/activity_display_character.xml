<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="auto_fit">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome"
                android:id="@+id/textName"
                android:textSize="27sp"
                android:layout_row="0"
                android:layout_column="0"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RaÃ§a"
                android:id="@+id/textRaca"
                android:textSize="25sp"
                android:layout_row="1"
                android:layout_column="0"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Classes"
                android:id="@+id/textClasses"
                android:textSize="22sp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginTop="20sp"/>

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="200sp"
                android:layout_row="3"
                android:layout_column="0">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:numColumns="3"
                    android:id="@+id/gridClasses">

                </GridLayout>

            </ScrollView>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_row="4"
                android:layout_column="0"
                android:numColumns="8"
                android:layout_marginTop="20sp">

                <TextView
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:text="PVs"
                    android:id="@+id/textPV"
                    android:textSize="25sp"
                    android:layout_row="0"
                    android:layout_column="0" />

                <TextView
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:text="n"
                    android:id="@+id/textValuePV"
                    android:textSize="25sp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:textColor="@color/colorAccent2"/>

                <TextView
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:text="CA"
                    android:id="@+id/textCA"
                    android:textSize="25sp"
                    android:layout_row="0"
                    android:layout_column="2" />

                <TextView
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:text="n"
                    android:id="@+id/textValueCA"
                    android:textSize="25sp"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:textColor="@color/colorAccent2"/>

                <TextView
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:text="Fort"
                    android:id="@+id/textFort"
                    android:textSize="25sp"
                    android:layout_row="0"
                    android:layout_column="4"/>

                <TextView
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:text="n"
                    android:id="@+id/textValueFort"
                    android:textSize="25sp"
                    android:layout_row="0"
                    android:layout_column="5"
                    android:textColor="@color/colorAccent2"/>

                <TextView
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:text="Ref"
                    android:id="@+id/textRef"
                    android:textSize="25sp"
                    android:layout_row="1"
                    android:layout_column="0"/>

                <TextView
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:text="n"
                    android:id="@+id/textValueRef"
                    android:textSize="25sp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:textColor="@color/colorAccent2"/>

                <TextView
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:text="Von"
                    android:id="@+id/textVon"
                    android:textSize="25sp"
                    android:layout_row="1"
                    android:layout_column="2" />

                <TextView
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:text="n"
                    android:id="@+id/textValueVon"
                    android:textSize="25sp"
                    android:layout_row="1"
                    android:layout_column="3"
                    android:textColor="@color/colorAccent2"/>

                <TextView
                    android:layout_width="53sp"
                    android:layout_height="wrap_content"
                    android:text="PMs"
                    android:id="@+id/textPM"
                    android:textSize="25sp"
                    android:layout_row="1"
                    android:layout_column="4" />

                <TextView
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:text="n"
                    android:id="@+id/textValuePM"
                    android:textSize="25sp"
                    android:layout_row="1"
                    android:layout_column="5"
                    android:textColor="@color/colorAccent2"/>

                <TextView
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:text="BBA"
                    android:id="@+id/textBBA"
                    android:textSize="25sp"
                    android:layout_row="2"
                    android:layout_column="0" />

                <TextView
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:text="n"
                    android:id="@+id/textValueBBA"
                    android:textSize="25sp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:textColor="@color/colorAccent2"/>

            </GridLayout>

        </GridLayout>

    </ScrollView>

</RelativeLayout>