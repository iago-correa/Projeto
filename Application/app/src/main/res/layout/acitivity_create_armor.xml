<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome da arma"
            android:id="@+id/textName"
            android:textSize="20sp"
            android:layout_row="0"
            android:layout_column="0"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameText"
            android:layout_row="1"
            android:layout_column="0"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Encantamentos"
            android:id="@+id/textEncantamentos"
            android:textSize="20sp"
            android:layout_row="2"
            android:layout_column="0"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/encantamentosText"
            android:layout_row="3"
            android:layout_column="0"
            android:inputType="textMultiLine"
            android:lines="2"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="275sp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="horizontal"
            android:layout_row="5"
            android:layout_column="0">

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weaponsList"
                android:layout_weight="0.50"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linearAtr"
                android:layout_weight="0.50">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Atributos"
                    android:id="@+id/textEncantamentos"
                    android:textSize="20sp"
                    android:visibility="visible"/>

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:rowCount="4"
                    android:columnCount="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dano"
                        android:textSize="20sp"
                        android:visibility="visible"
                        android:layout_row="0"
                        android:layout_column="0"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="n"
                        android:id="@+id/textDano"
                        android:textSize="20sp"
                        android:layout_marginLeft="10sp"
                        android:textColor="@color/colorAccent2"
                        android:visibility="visible"
                        android:layout_row="0"
                        android:layout_column="1"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Crítico"
                        android:textSize="20sp"
                        android:visibility="visible"
                        android:layout_row="1"
                        android:layout_column="0"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="n"
                        android:id="@+id/textCritico"
                        android:textSize="20sp"
                        android:layout_marginLeft="10sp"
                        android:textColor="@color/colorAccent2"
                        android:visibility="visible"
                        android:layout_row="1"
                        android:layout_column="1"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mãos"
                        android:textSize="20sp"
                        android:visibility="visible"
                        android:layout_row="2"
                        android:layout_column="0"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="n"
                        android:id="@+id/textMaos"
                        android:textSize="20sp"
                        android:layout_marginLeft="10sp"
                        android:textColor="@color/colorAccent2"
                        android:visibility="visible"
                        android:layout_row="2"
                        android:layout_column="1"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tipo"
                        android:textSize="20sp"
                        android:visibility="visible"
                        android:layout_row="3"
                        android:layout_column="0"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="n"
                        android:id="@+id/textTipo"
                        android:textSize="20sp"
                        android:layout_marginLeft="10sp"
                        android:textColor="@color/colorAccent2"
                        android:visibility="visible"
                        android:layout_row="3"
                        android:layout_column="1"/>

                </GridLayout>


            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Escolher"
            android:id="@+id/buttonCreate"
            android:layout_column="0"
            android:layout_row="8"/>

    </GridLayout>

</RelativeLayout>